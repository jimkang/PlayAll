{
  "manifest_version": 2,

  "name": "PlayAll",
  "description": "Plays all the YouTube links it can find in a web page, one after another.",
  "version": "1.0.1",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": ["background.js", "playall.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "19": "PlayAll_icon_19.png",
      "38": "PlayAll_icon_38.png"
    }
  },

  "web_accessible_resources": [
    "playall.js"
  ],

  "icons": {
    "16": "PlayAll_icon_16.png",
    "48": "PlayAll_icon_48.png",
    "128": "PlayAll_icon_128.png"
  }
}

