{
  "manifest_version": 2,

  "name": "Playall",
  "description": "Play all the YouTube videos linked within a web page, one after another.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": ["background.js", "playall.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "web_accessible_resources": [
    "playall.js"
  ]
}
